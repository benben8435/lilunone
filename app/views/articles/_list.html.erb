<% articles.reverse_each do |article| %>
  <li>
    <div class="thumbnail">
    <%= link_to image_tag(article.photo.url(:small)), 
      article_path(article), class: "th" %>
    <span>
      <% if article.title == "" %>
        <%= truncate(article.text, length: 16) %>
      <% else %>
        <%= article.title %>
      <% end %>
    </span>
    </div>
  </li>
<% end %>