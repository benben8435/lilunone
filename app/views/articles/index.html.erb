  <h1 class="text-center columns">Poooosts</h1>
</div>

<div class="row">
  <div class="small-3 columns">
    <ul class="side-nav"><%= render partial: "tag_list" %></ul>
  </div>
  <ul class="small-13 columns small-block-grid-3"><%= render partial: "list", locals: {articles: @articles} %></ul>
</div>

  




