      <h1><%= link_to image_tag("logo_hori.png", width: 100), root_path %></h1>
    </li>
  </ul>

  <section class="top-bar-section">
    <!-- Left Nav Section -->
    <ul class="right">
      <li class="active"><%= link_to "New Article", new_article_path %></li>
    </ul>
  </section>
</nav>
</div>

